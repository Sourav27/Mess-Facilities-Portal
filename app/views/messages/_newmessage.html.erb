<% if date != message.date %>
	<div class="date"><%= message.date %></div>
<% end %>
<div class="card">
    <div class="row" style="margin: 0;">
      
      <div class="card-block">
        <p class="card-text">
	<% member = Member.find_by(username: message.user_id) %>
        <% if member.present?%>
          <span class="stamp"><%= User.find_by(username: message.user_id).fullname%> | <%=member.position %></span><br>
        <% else %>
        <span class="stamp"><%= User.find_by(username: message.user_id).fullname%> | <%=message.user_id %></span><br>
        <% end %>
	<%= message.body %><br>
          <small class="pull-right"><%= message.timestamp %></small>
        </p>
      </div>
    </div>
</div>
