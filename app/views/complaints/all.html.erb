<div class="col-lg-8">
	
	<% if session[:admin]=='1' %>
		<table class="table table-striped table-responsive">
		<thead>
			<th><strong>#</strong></th>
			<th><strong>Title</strong></th>
			<th><strong>Description</strong></th>
			<th><strong>Category</strong></th>
			<th><strong>Roll No.</strong></th>
			<th><strong>Date</strong></th>
			<th><strong>Resolved</strong></th>
		</thead>
		<tbody>
		<% i=1 %>
		<% @complaints.each do |complaint| %>
			<tr>
				<td><%= i %></td>
				<td><%= complaint.title %></td>
				<td><%= complaint.content %></td>
				<td><%= complaint.category.name %></td>
				<td><%= complaint.user.username %></td>
				<td><%= (complaint.created_at+330.minutes).strftime("%d-%m-%y") %></td>
				<td><%= complaint.solved %></td>
			</tr>
			<% i=i+1 %>
			<% end %>
		</tbody>
		</table>
	<% else %>
		<h1>Login Here</h1>
			<%= form_for(:session, url: all_path, method: :post) do |f| %>
				<%= f.text_field :password, placeholder: "Password", class:"form-control" %><br>
		    	<%= f.submit :Submit, class: "btn btn-primary"%>
			<% end %>
		
	<% end %>

</div>
