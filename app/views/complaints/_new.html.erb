
<% if logged_in? %>

<h1>Register a new complaint</h1>
	<%= form_for(:complaint, url: complaints_path, method: :post) do |f| %>
		<%= f.select :category, options_for_select(["Mess", "Facilities"]), :prompt => "Select a category", :class=>"form-control"%><br>
		<%= f.select :mess,options_for_select(["sk", "rr"]),{:prompt => "Select a mess"}, {:style => "display:none",:id => "mess"} %>
		<%= f.select :mess,options_for_select(["guru", "andavar"]),{:prompt => "Select a facility"}, {:style => "display:none",:id => "facility"} %>
		<%= f.text_field :title, placeholder: "Title", class:"form-control" %><br>
		<%= f.text_area :content, placeholder: "Content", class:"form-control" %><br>
		<%= f.file_field :file_link %><br><br>
    <%= f.submit :Submit, class: "btn btn-primary"%>
	<% end %>
<% end %>
<script type="text/javascript">
  $(function () {
    $("#complaint_category").change(function () {
        var category = $(this).val();
        if (category == "Mess") {
          $("#mess").show();
        console.log("show");
        } else {
          $("#mess").hide();
	  console.log("hide");
        }
	if (category == "Facilities") {
          $("#facility").show();
        console.log("show");
        } else {
          $("#facility").hide();
	  console.log("hide");
        }
    });

  });
</script>
