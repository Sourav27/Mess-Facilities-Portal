<div class="page-header"><%= @complaint.title %></div>
<div class="panel-body"><%= @complaint.content %></div>

<div id="messages" data-complaint-id="<%= @complaint.id %>">
	<%= render @complaint.messages %>
</div>

<form id="new_message" >
  <div class="form-group">
    <input name="message_body" id="message_body" class="form-control">
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>
  <div class="form-group">
  	<input type="submit" class="btn btn-primary" form="new_message" value="Submit">
  </div>
</form>